# Production Hardware & Software Configuration Example

# Server Environment
NODE_ENV=production
PORT=3000

# Security (MANDATORY)
# Get from Cloudflare Dashboard
TURNSTILE_SECRET_KEY=1x0000000000000000000000000000000AA 

# Network
# Set to true if behind Cloudflare/Nginx/cPanel
TRUST_PROXY=true
ALLOWED_ORIGINS=https://webfine.com.tr,https://seo.webfine.com.tr

# Resource Control (Hardening)
# Number of simultaneous audits. Set to 1 or 2 for low CPU/RAM servers.
MAX_CONCURRENT_AUDITS=2
# Set to false to disable disk logging and save I/O
LOG_TO_DISK=false
# Set to true for detailed console logs
DEBUG_LOGS=false

# Notifications
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id
